{
    "name": "arkdark",
    "displayName": "ArkDark",
    "description": "Dark theme for VS Code from ArkType",
    "version": "0.2.0",
    "private": true,
    "publisher": "arktypeio",
    "scripts": {
        "build": "node ./src/writeTheme.js",
        "installLocal": "node ./installLocal.js",
        "tryBuild": "npm run build && npm run installLocal",
        "publishExtension": "npx vsce publish"
    },
    "devDependencies": {
        "vsce": "2.14.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/arktypeio/arkdark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "icon": "icon.png",
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "ArkDark",
                "uiTheme": "vs-dark",
                "path": "./themes/arkDark.json"
            },
            {
                "label": "ArkDark (italic)",
                "uiTheme": "vs-dark",
                "path": "./themes/arkDarkItalic.json"
            },
            {
                "label": "ArkDarkStark",
                "uiTheme": "vs-dark",
                "path": "./themes/arkDarkStark.json"
            },
            {
                "label": "ArkDarkStark (italic)",
                "uiTheme": "vs-dark",
                "path": "./themes/arkDarkStarkItalic.json"
            }
        ]
    }
}
